<div class="container-fluid">

    <h1 class="text-center">Todos as reservas</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> <%= "Horário"%> </th>
            <th scope="col"> <%= "Data"%> </th>
            <th scope="col"> <%= "Descrição"%> </th>
            <th scope="col"> <%= "Sala"%> </th>
            <th scope="col"> <%= "Localização"%> </th>
            <th> 
                <%= link_to new_admins_backoffice_rent_path, class:"btn btn-success btn-circle" do%>
                    <i class="fas fa-plus"></i>
                <% end %>
            </th>
        </tr>
        </thead>
        <tbody>
            <% @rents.each do |rent| %>
                <tr>
                    <th scope="row"> <%= rent.id %> </th>
                    <td> <%= rent.hour %> </td>
                    <td> <%= rent.rental_date %> </td>
                    <td> <%= rent.description %> </td>
                    <td> <%= rent.room.name %> </td>
                    <td> <%= rent.room.location %> </td>
                    <td>
                        <%= link_to edit_admins_backoffice_rent_path(rent), class:"btn btn-primary btn-circle" do%>
                            <i class="fas fa-edit"></i>
                        <% end %>
                        
                        <%= link_to admins_backoffice_rent_path(rent), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir essa reserva?"} do%>
                            <i class="fas fa-trash"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <%= paginate @rents %>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
