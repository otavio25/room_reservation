<div class="container-fluid">

    <h1 class="text-center">Todas as Salas</h1><br>

    <%= search_form_for @q, url: admins_backoffice_rooms_path, class:"form-inline my-2 my-lg-0" do |f| %>
        <%= f.search_field :name_or_location_or_capacity_cont, class:"form-control mr-sm-2" %>
        <button type="submit" class="btn btn-outline-primary">Primary</button>
    <% end %><br>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> <%= sort_link @q, :name, "Nome"%> </th>
            <th scope="col"> <%= sort_link @q, :location, "Localização"%> </th>
            <th scope="col"> <%= sort_link @q, :capacity, "Capacidade"%> </th>
            <th> 
                <%= link_to new_admins_backoffice_room_path, class:"btn btn-success btn-circle" do%>
                    <i class="fas fa-plus"></i>
                <% end %>
            </th>
        </tr>
        </thead>
        <tbody>
            <% @rooms.each do |room| %>
            <tr>
                <th scope="row"> <%= room.id %> </th>
                <td> <%= room.name %> </td>
                <td> <%= room.location %> </td>
                <td> <%= room.capacity %> </td>
                <td>
                    <%= link_to edit_admins_backoffice_room_path(room), class:"btn btn-primary btn-circle" do%>
                        <i class="fas fa-edit"></i>
                    <% end %>
                    
                    <%= link_to admins_backoffice_room_path(room), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: "Deseja realmente excluir essa sala?"} do%>
                        <i class="fas fa-trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <%= paginate @rooms %>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
