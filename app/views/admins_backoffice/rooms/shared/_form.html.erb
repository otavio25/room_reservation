<div class="p-5">
    <div class="text-center">
        <h1 class="h4 text-gray-900 mb-4"> <%= "#{action_message} Sala"%> </h1>
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <% if @room.errors.any? %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <ul>
                        <% @room.errors.full_messages.each do |message|%>
                        <li> <%= message %> </li>
                        <% end %>
                    </ul>
                </div>
            <% end %>

            <%= form_with(model: [ :admins_backoffice, @room ],class: "user", local: true) do |form| %>
                <div class="form-group">
                    <%= form.label :nome%>
                    <%= form.text_field :name, class: "form-control form-control-user", placeholder: "Nome"%>
                </div>

                <div class="form-group">
                    <%= form.label :localização%>
                    <%= form.text_field :location, class: "form-control form-control-user", placeholder: "Localização"%>
                </div>

                <div class="form-group">
                <%= form.label :capacidade%>
                    <%= form.number_field :capacity, class: "form-control form-control-user", placeholder: "Capacidade"%>
                </div>

                <button type="submit" class="btn btn-primary btn-user btn-block">Salvar</button>
            <% end %>
        </div>
        <div class="col-md-2"></div>
    </div>    
</div>