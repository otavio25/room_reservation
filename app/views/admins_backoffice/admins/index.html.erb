<div class="container-fluid">

    <h1 class="text-center"> <%= t('messages.listing', model: @admins.model_name.human(count: 2)) %> </h1><br>

    <%= search_form_for @q, url: admins_backoffice_admins_path, class:"form-inline my-2 my-lg-0" do |f| %>
        <%= f.search_field :name_or_email_cont, class:"form-control mr-sm-2" %>
        <button type="submit" class="btn btn-outline-primary">Primary</button>
    <% end %><br>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> <%= sort_link @q, :name, translate_field(@admins, :name) %> </th>
            <th scope="col"> <%= sort_link @q, :email, translate_field(@admins, :email)%> </th>
            <th> 
                <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do%>
                    <i class="fas fa-plus"></i>
                <% end %>
            </th>
        </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
            <tr>
                <th scope="row"> <%= admin.id %> </th>
                <td> <%= admin.name %> </td>
                <td> <%= admin.email %> </td>
                <td>
                    <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do%>
                        <i class="fas fa-edit"></i>
                    <% end %>
                    
                    <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data: { confirm: t('messages.confirm_with', item: admin.name)}  do%>
                        <i class="fas fa-trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="row" style="justify-content: center">
        <div>
            <%= paginate @admins %>
        </div>
    </div>
</div>
