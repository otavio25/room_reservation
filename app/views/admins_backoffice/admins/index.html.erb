<div class="container-fluid">

    <h1 class="text-center">Todos os Administradores</h1>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> Email </th>
            <th> 
                <%= link_to new_admins_backoffice_admin_path, class:"btn btn-success btn-circle" do%>
                    <i class="fas fa-plus"></i>
                <% end %>
            </th>
        </tr>
        </thead>
        <tbody>
            <% @admins.each do |admin| %>
            <tr>
                <th scope="row"> <%= admin.id %> </th>
                <td> <%= admin.email %> </td>
                <td>
                    <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do%>
                        <i class="fas fa-edit"></i>
                    <% end %>
                    
                    <%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle" do%>
                        <i class="fas fa-trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <%= paginate @admins %>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
