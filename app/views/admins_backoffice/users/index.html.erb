<div class="container-fluid">
    <h1 class="text-center">Todos os Usu√°rios</h1><br>

    <%= search_form_for @q, url: admins_backoffice_users_index_path, class:"form-inline my-2 my-lg-0" do |f| %>
        <%= f.search_field :name_or_email_cont, class:"form-control mr-sm-2" %>
        <button type="submit" class="btn btn-outline-primary">Primary</button>
    <% end %><br>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"> <%= sort_link @q, :name, "Nome"%> </th>
            <th scope="col"> <%= sort_link @q, :email, "e-mail"%> </th>
            <th> 
                <%= link_to new_admins_backoffice_user_path	, class:"btn btn-success btn-circle" do%>
                    <i class="fas fa-plus"></i>
                <% end %>
            </th>
        </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <th scope="row"> <%= user.id %> </th>
                <td> <%= user.name %> </td>
                <td> <%= user.email %> </td>
                <td>
                    <%= link_to edit_admins_backoffice_user_path(user), class:"btn btn-primary btn-circle" do%>
                        <i class="fas fa-edit"></i>
                    <% end %>
                    
                    <%= link_to admins_backoffice_user_path(user), method: :delete, class:"btn btn-danger btn-circle" do%>
                        <i class="fas fa-trash"></i>
                    <% end %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <%= paginate @users %>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>

